<h1>Login</h1>

<% form_tag do %>

  <% if flash[:error] %>
    <p style="color: red">
      <%= flash[:error] %>
    </p>
  <% end %>

  <p>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </p>
  
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  
  <p>
    <%= submit_tag "Login" %>
  </p>
<% end %>

<p>
  <%= link_to "Join", join_path %>
</p>

<p>
  <%= link_to "Reset Password", reset_password_path %>
</p>